import os

from tgm.agents.TemporalGaussianMixture import TemporalGaussianMixture
from tgm.agents.debug.Debugger import Debugger
from tgm.environments.MazeEnv import MazeEnv


def debug(path, max_episode_length=50):

    # Collect the debugging data.
    env = MazeEnv(path, max_episode_length)
    model = TemporalGaussianMixture()

    # Run the debugging GUI.
    debugger = Debugger(model, env)
    debugger.run()


if __name__ == '__main__':
    maze_index = 8
    maze_path = os.path.join(os.environ["DATA_DIRECTORY"], "mazes", f"maze_{maze_index}.txt")
    debug(maze_path)
